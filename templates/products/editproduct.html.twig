{% extends "base.html.twig" %}

{% block title %}Produit
{% endblock %}

{% block content %}

	<h2>Editer :
		{{produit.name}}</h2>

	{% if popup %}
		<span class='done'>{{popup}}</span>
	{% endif %}

	<form class="updateprod" action="./product?productid={{produit.id}}" method="POST">

		<label for="name">Nom du produit</label>
		<input type="text" name="name" id="name" value="{{produit.name}}">

		<label for="quantity">Quantit√©</label>
		<input type="text" name="quantity" id="quantity" value="{{produit.quantity}}">

		<label for="price">Prix</label>
		<input type="text" name="price" id="price" value="{{produit.price}}">

		<button>Modifier</button>

	</form>
{% endblock %}
