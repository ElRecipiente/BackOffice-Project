{% extends "base.html.twig" %}

{% block title %}Produits
{% endblock %}

{% block content %}

	<h2>Produits</h2>
	{% if popup %}
		<span class='done'>{{popup}}</span>
	{% endif %}
	<table>
		<thead>
			<tr>
				<th>Produit</th>
				<th>Quantité</th>
				<th>Prix</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>


			{% for produit in produits %}
				<tr>
					<td>{{ produit.name }}</td>
					<td>
						{% if produit.quantity < 10 %}
							<span style='color: red;'>{{ produit.quantity }}</span>
						{% else %}
							{{ produit.quantity }}
						{% endif %}
					</td>


					<td>{{ produit.price }}</td>
					<td>

						<a class="blue" href="./editproduct?productid={{produit.id}}">Editer</a>
						<a class="red" href="./deleteproduct?productid={{produit.id}}" onclick="return confirm()">Supprimer</a>
					</td>
				</tr>

			{% endfor %}

		</tbody>
	</table>
	<a class="green" href="./newproduct">Créer un nouveau produit</a>

{% endblock %}
