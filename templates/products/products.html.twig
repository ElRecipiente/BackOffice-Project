{% extends "base.html.twig" %}

{% block title %}Produits
{% endblock %}

{% block content %}

	<h2>Produits</h2>

	<table>
		<thead>
			<tr>
				<th>Produit</th>
				<th>Quantit√©</th>
				<th>Prix</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>

			{% for produit in produits %}
				<tr>
					<td>{{ produit.name }}</td>
					<td>{{ produit.quantity }}</td>
					<td>{{ produit.price }}</td>
					<td>
						<a class="green" href="./newproduct">Nouveau</a>
						<a class="blue" href="./editproduct?productid={{produit.id}}">Editer</a>
						<a class="red" href="./deleteproduct?productid={{produit.id}}">Supprimer</a>
					</td>
				</tr>

			{% endfor %}

		</tbody>
	</table>


{% endblock %}
